// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Cliente {
  id         Int         @id @default(autoincrement())
  nome       String
  email      String      @unique
  senha      String
  endereco   String?
  telefone   String?
  pedidos    Pedido[]
  avaliacoes Avaliacao[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Fornecedor {
  id             Int      @id @default(autoincrement())
  nome           String
  email          String   @unique
  senha          String
  whatsapp       String
  descricao      String?
  logo           String?
  status         Boolean  @default(true) // true = ativo, false = inativo
  assinaturaAtiva Boolean @default(false) // status da mensalidade
  pratos         Prato[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Prato {
  id           Int         @id @default(autoincrement())
  nome         String
  descricao    String
  preco        Float
  imagem       String?
  categoria    String      // ex: salada, fitness, vegano, etc.
  disponivel   Boolean     @default(true)
  fornecedor   Fornecedor  @relation(fields: [fornecedorId], references: [id])
  fornecedorId Int
  avaliacoes   Avaliacao[]
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model Pedido {
  id        Int      @id @default(autoincrement())
  cliente   Cliente  @relation(fields: [clienteId], references: [id])
  clienteId Int
  pratoId   Int
  status    String   @default("pendente") // pendente, confirmado, entregue, cancelado
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Avaliacao {
  id         Int      @id @default(autoincrement())
  nota       Int
  comentario String
  prato      Prato    @relation(fields: [pratoId], references: [id])
  pratoId    Int
  cliente    Cliente  @relation(fields: [clienteId], references: [id])
  clienteId  Int
  createdAt  DateTime @default(now())
}
